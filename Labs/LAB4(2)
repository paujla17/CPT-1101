#include <iostream> 

using namespace std; 

bool is_leap (int year){
    if(year % 4 == 0){
        if(year % 100 == 0)
            if(year % 400 == 0)
                return true; 

            }else{
                return false; 
            }
        else{ 
            return true;
        }
    else{
        return false; 
    }
    

int main(){
        cout << is_leap(1991);
        // cout << is_leap(2004); //
        // cout << is_leap(2000); //
    }
    return 0; 

}